import java.util.Scanner;
	class Main {
	  public static void main(String[] args) {
	

	    Scanner input = new Scanner(System.in);
	    	
	    System.out.print("Input 1st integer: ");
	    int number1 = input.nextInt();
	    
	    System.out.print("Input 2nd integer: ");
	    int number2 = input.nextInt();
	

	    int sum = number1 + number2;
	    System.out.println("Sum of two integers: " + sum);
	

	    int subtract = number1 - number2;
	    System.out.println("Difference of two integers: " + subtract);
	

	    int product = number1 * number2;
	    System.out.println("Product of two integers: " + product);
	

	    float average = sum/2;
	    System.out.println("Average of two integers: " + average);
	

	    int distance = number1 - number2;
	    System.out.println("Distance of two integers: " + distance);
	

	    if(number1 < number2){
	      System.out.println("Min integer is " + number1);
	      System.out.println("Max integer is " + number2);
	    }
	    else if(number1 > number2){
	      System.out.println("Max integer is " + number1);
	      System.out.println("Min integer is " + number2);
	    }
	

	  }
	}

